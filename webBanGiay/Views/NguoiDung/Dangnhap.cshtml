
@{
    Layout = null;
}
<link href="~/Content/Css/Loginc.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập tài khoản</title>
</head>
<body>
    <section style="background: url('/AnhSanPham/background6.jpg')no-repeat; background-position: center; background-size: cover; ">
        <div class="form-box">
            <div class="form-value">
                <form method="post" action="">
                    <h2>Đăng nhập</h2>

                    @using (Html.BeginForm())
                    {

                        <div class="inputbox">
                            <ion-icon name="mail-outline"></ion-icon>
                            <span>Tài Khoản</span> <br />
                            @Html.TextBox("txtTaiKhoan")
                        </div>
                        <div class="inputbox">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <span>Mật Khẩu</span> <br />
                           
                            <input name="txtMatKhau" type="password" />
                        </div>
                        <button type="submit">Đăng nhập</button>
                       @* <input type="submit" id="btnSubmit" name="btnSubmit" />*@

                    }

                    <div class="register">
                        <p style="color:red"> @ViewBag.ThongBao</p>
                        <p>Chưa có tài khoản <a href="@Url.Action("Dangky")">Tạo ngay</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
